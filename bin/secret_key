#!/usr/bin/env ruby

require 'open-uri'

secret_key_php = open('https://api.wordpress.org/secret-key/1.1/salt/') {|f| f.read }
puts secret_key_php

secret_key = []
secret_key_php.each_line do |line|
  split = line.split("'")
  secret_key << "#{split[1]}='#{split[3]}'"
end

env = secret_key.join(' ')
puts '=>'
puts "Run `heroku config:set #{env}`\n..."
puts `heroku config:set #{env}`
