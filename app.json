{
  "name": "wordpress-heroku",
  "description": "WordPress on Heroku",
  "keywords": [
    "Blog",
    "PHP",
    "WordPress"
  ],
  "website": "https://github.com/shimoju/wordpress-heroku",
  "repository": "https://github.com/shimoju/wordpress-heroku",
  "scripts": {
  },
  "env": {
    "COMPOSER_GITHUB_OAUTH_TOKEN": {
      "description": "GitHub access token for Composer: https://devcenter.heroku.com/articles/php-support#custom-github-oauth-tokens",
      "required": true
    },
    "AUTH_KEY": {
      "description": "Authentication secret key",
      "generator": "secret"
    },
    "AUTH_SALT": {
      "description": "Authentication secret salt",
      "generator": "secret"
    },
    "LOGGED_IN_KEY": {
      "description": "Authentication secret key",
      "generator": "secret"
    },
    "LOGGED_IN_SALT": {
      "description": "Authentication secret salt",
      "generator": "secret"
    },
    "NONCE_KEY": {
      "description": "Authentication secret key",
      "generator": "secret"
    },
    "NONCE_SALT": {
      "description": "Authentication secret salt",
      "generator": "secret"
    },
    "SECURE_AUTH_KEY": {
      "description": "Authentication secret key",
      "generator": "secret"
    },
    "SECURE_AUTH_SALT": {
      "description": "Authentication secret salt",
      "generator": "secret"
    }
  },
  "formation": {
  },
  "addons": [
    "cleardb",
    "papertrail"
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ]
}
